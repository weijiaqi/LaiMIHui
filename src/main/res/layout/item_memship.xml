<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/weixintupian"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:src="@mipmap/moren" />

            <TextView
                android:id="@+id/shangpinname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/weixintupian"
                android:layout_toEndOf="@+id/weixintupian"
                android:text="545454545"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dianzhu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shangpinname"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/weixintupian"
                android:text="店主姓名:"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/xiaoshou_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="销售金额:"
                android:textSize="18sp"
                android:layout_above="@+id/dingdan_numbers"
                android:layout_toEndOf="@+id/weixintupian" />

            <TextView
                android:id="@+id/dingdan_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/weixintupian"
                android:layout_toEndOf="@+id/weixintupian"
                android:text="订单数量:"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weixin_nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:text="店主微信昵称"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/leiji_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="累计收益:"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
