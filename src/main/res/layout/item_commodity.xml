<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <ImageView

            android:layout_margin="15dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/comcity"
            android:id="@+id/tupian" />

    <TextView
        android:id="@+id/shangpinname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="商品名称商品名称商品名称商品名称"
        android:textSize="18sp"
        android:layout_alignTop="@+id/tupian"
        android:layout_toEndOf="@+id/tupian" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="售价:"
         android:textSize="18sp"

        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/tupian"
        android:layout_toEndOf="@+id/tupian" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥500.00"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_marginLeft="50dp"
        android:id="@+id/price"
        android:layout_alignBottom="@+id/tupian"
        android:layout_toEndOf="@+id/tupian" />
</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益金:"
                android:textSize="20sp"
                android:layout_margin="15dp"
                />
            <TextView
                android:id="@+id/shouyijin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/份"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                />
            <TextView

                android:id="@+id/dianjicishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击99次"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="80dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/xiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下架"
                android:layout_marginLeft="20dp"
                android:background="@color/green"
                />
            <Button
                android:id="@+id/haibao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成海报"
                android:layout_marginLeft="20dp"
                android:background="@color/green"
                />
            <Button
                android:id="@+id/guanggaotiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看广告条"
                android:layout_marginLeft="20dp"
                android:background="@color/green"
                />

        </LinearLayout>

</LinearLayout>

</LinearLayout>
